import System;

class Component {
    public render(): VNode {
        return vdom <span>Hello from Component</span>;
    }
}


class App
{
    private count: State<number> = new State<number>(0);

    public render(): VNode {

        return vdom <span>
                        <Component></Component>
                        <b onClick={e -> this.count.set(this.count.get() + 1) }> Hello World</b>
                        by LyraScript!
                    </span>;
    }
}
