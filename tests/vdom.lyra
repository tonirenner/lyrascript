import System;

class Component {
    private count: State<number> = new State<number>(0);

    constructor() {
        this.count.subscribe({value:number -> System.log(value)});
    }

    public render(): VNode {
        return vdom <span onClick={e ->  this.count.set(this.count.get() + 1) }>Hello from Component</span>;
    }
}


class App
{
    public render(): VNode {
        return vdom <span>
                        <Component></Component>
                        <b> Hello World</b>
                        by LyraScript!
                    </span>;
    }
}
