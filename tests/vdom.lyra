import System;

class Component {
    private count: State<number> = new State<number>(0);

    constructor() {
        this.count.subscribe({value:number -> System.log(value)});
        System.log("Component created");
    }

    public render(): VNode {

        if ( this.count.get() % 2 == 0 ) {
            return vdom <span onClick={e ->  this.count.set(this.count.get() + 1) }>Hello from Component :)</span>;
        }

        return vdom <span onClick={e ->  this.count.set(this.count.get() + 1) }>Hello from Component</span>;
    }
}


class App
{
    public render(): VNode {
        return vdom <span>
                        <Component></Component>
                        <b> Hello World</b>
                        by LyraScript!
                    </span>;
    }
}
